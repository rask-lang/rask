{
  "name": "rask",
  "displayName": "Rask",
  "description": "Language support for Rask",
  "version": "0.1.0",
  "publisher": "rask-lang",
  "license": "MIT OR Apache-2.0",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rask-lang/rask"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rask",
        "aliases": ["Rask", "rask"],
        "extensions": [".rk"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/rask-file.svg",
          "dark": "./icons/rask-file.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "rask",
        "scopeName": "source.rk",
        "path": "./syntaxes/rask.tmLanguage.json"
      },
      {
        "scopeName": "text.markdown.rk.codeblock",
        "path": "./syntaxes/rask-markdown.tmLanguage.json",
        "injectTo": ["text.html.markdown"],
        "embeddedLanguages": {
          "meta.embedded.block.rk": "rask"
        }
      }
    ],
    "commands": [
      {
        "command": "rask.run",
        "title": "Rask: Run File",
        "icon": "$(play)"
      },
      {
        "command": "rask.restartServer",
        "title": "Rask: Restart Language Server"
      }
    ],
    "snippets": [
      {
        "language": "rask",
        "path": "./snippets/rask.json"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "rask.run",
          "when": "resourceLangId == rask",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Rask",
      "properties": {
        "rask.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to rask-lsp binary. If empty, searches PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}
