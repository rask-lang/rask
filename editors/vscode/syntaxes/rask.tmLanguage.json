{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rask",
  "scopeName": "source.rk",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#attributes" },
    { "include": "#method-calls" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.rk",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.rk",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rk",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.rk",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.double.rk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.single.rk",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "include": "#string-escapes" }
          ]
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.rk",
          "match": "\\\\(n|r|t|\\\\|0|'|\"|\\{|u\\{[0-9a-fA-F]{1,6}\\})"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.rk",
          "match": "\\b0x[0-9a-fA-F_]+(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        },
        {
          "name": "constant.numeric.binary.rk",
          "match": "\\b0b[01_]+(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        },
        {
          "name": "constant.numeric.octal.rk",
          "match": "\\b0o[0-7_]+(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        },
        {
          "name": "constant.numeric.float.rk",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?(f32|f64)?\\b"
        },
        {
          "name": "constant.numeric.integer.rk",
          "match": "\\b[0-9][0-9_]*(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.rk",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*",
          "captures": {
            "0": { "name": "entity.name.function.decorator.rk" }
          }
        },
        {
          "name": "meta.attribute.rk",
          "begin": "@([a-zA-Z_][a-zA-Z0-9_]*)\\(",
          "beginCaptures": {
            "1": { "name": "entity.name.function.decorator.rk" }
          },
          "end": "\\)",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" }
          ]
        }
      ]
    },
    "method-calls": {
      "comment": "Keywords used as method names after dot - color as methods not keywords",
      "patterns": [
        {
          "name": "entity.name.function.method.rk",
          "match": "(?<=\\.)\\s*(if|else|match|for|in|while|loop|break|continue|return|deliver|is|check|assert|try|func|let|const|struct|enum|trait|extend|import|type|test|public|take|own|mutate|unsafe|comptime|native|export|using|lazy|with|using|ensure|catch|select|step|or|as|where|none|null|benchmark|asm)(?=\\s*\\()"
        },
        {
          "name": "entity.name.function.method.rk",
          "match": "(?<=\\.)\\s*([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rk",
          "match": "\\b(if|else|match|for|in|while|loop|break|continue|return|deliver|is|check|assert|try)\\b"
        },
        {
          "name": "keyword.declaration.rk",
          "match": "\\b(func|let|const|struct|enum|trait|extend|import|type|test)\\b"
        },
        {
          "name": "keyword.modifier.rk",
          "match": "\\b(public|take|own|read|unsafe|comptime|native|export|lazy)\\b"
        },
        {
          "name": "keyword.other.rk",
          "match": "\\b(select|with|ensure|where|as|or|asm|step|benchmark)\\b"
        },
        {
          "name": "constant.language.rk",
          "match": "\\b(true|false|None|null)\\b"
        },
        {
          "name": "variable.language.self.rk",
          "match": "\\bself\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.rk",
          "match": "\\b(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize|f32|f64|bool|char|string)\\b"
        },
        {
          "name": "entity.name.type.rk",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.rk",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.compound.rk",
          "match": "(\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.assignment.rk",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.rk",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.rk",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.rk",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.arrow.rk",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.range.rk",
          "match": "(\\.\\.|\\.\\.=)"
        },
        {
          "name": "keyword.operator.optional.rk",
          "match": "(\\?\\?|\\?\\.)"
        },
        {
          "name": "keyword.operator.optional.rk",
          "match": "\\?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.rk",
          "match": "[,;]"
        },
        {
          "name": "punctuation.accessor.rk",
          "match": "\\."
        },
        {
          "name": "punctuation.definition.block.rk",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.rk",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.brackets.rk",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.colon.rk",
          "match": ":"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.rk",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        },
        {
          "name": "variable.other.rk",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
