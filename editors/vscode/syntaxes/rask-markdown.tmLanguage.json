{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "text.markdown.rask.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#fenced-code-block-rask"
    }
  ],
  "repository": {
    "fenced-code-block-rask": {
      "begin": "(^|\\G)(\\s*)(```)(rask)\\s*$",
      "end": "(^|\\G)(\\2)(```)\\s*$",
      "name": "markup.fenced_code.block.markdown",
      "beginCaptures": {
        "3": { "name": "punctuation.definition.markdown" },
        "4": { "name": "fenced_code.block.language.markdown" }
      },
      "endCaptures": {
        "3": { "name": "punctuation.definition.markdown" }
      },
      "patterns": [
        {
          "begin": "(^|\\G)(\\s*)",
          "while": "(^|\\G)(?!\\s*```\\s*$)",
          "contentName": "meta.embedded.block.rask",
          "patterns": [
            { "include": "source.rask" }
          ]
        }
      ]
    }
  }
}
